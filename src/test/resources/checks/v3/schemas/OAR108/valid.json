{
    "openapi": "3.0.0",
    "info": {
      "title": "Ejemplo de API",
      "version": "1.0.0"
    },
    "paths": {
      "/item": {
        "get": {
          "responses": {
            "200": {
              "description": "OK",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "number"
                      },
                      "nombre": {
                        "type": "string"
                      }
                    },
                    "required": ["id", "nombre"]
                  },
                  "example": {
                    "id": 12.3,
                    "nombre": "Ejemplo"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
